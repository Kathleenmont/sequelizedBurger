<div class="container">
  <h1 id="title">Eat Dat Burger</h1>
  
{{!-- print the uneaten list --}}
  <div id="toEat">
    <h2>Burgers to Eat!</h2>
  
    <ul>

      {{#each burgers}}

      {{#unless devoured}}

      <li>
        
        {{burger_name}}

        <button class="change-eaten" data-id="{{id}}" data-neweat="{{devoured}}">
          Devour it!
        </button>

      </li>

      {{/unless}}

      {{/each}}

    </ul>
  </div>

{{!-- burger img --}}
  <img id="img" src="/static/assets/img/burger.png" alt="burger" width="250px">

{{!-- print the already eaten list --}}
  <div id="eaten">
    <h2>Already Ate!</h2>
    <ul>

      {{#each burgers}}

      {{#if devoured}}
      <li>
        {{burger_name}}
      </li>
      {{/if}}

      {{/each}}

    </ul>
  </div>

  <div class="add">
    <h2>Add A Burger!</h2>
    <form class="create-form">
      <div class="form-group">
        <label>Burger Name:</label>
        <input type="text" id="newBurger" name="burger_name"><br><br>
      </div>
      <button type="submit" id="add-burger">Add Burger</button>
    </form>
  </div>

  <div class="clear-all">
    <button id="clear">Clear all Burgers</button>
  </div>
</div>