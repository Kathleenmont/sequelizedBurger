<div class="container">
  <h1 id="title">Eat Dat Burger</h1>

  <div id="toEat">
    <h2>Burgers to Eat!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-button devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>


  <img id="img" src="http://localhost:8080/static/assets/img/burger.png" alt="burger" width="250px">

  <div id="eaten">
    <h2>Already Ate!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-button devoured=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="add">
    <h2>Add A Burger!</h2>
    <form class="create-form">
      <div class="form-group">
        <label>Burger Name:</label>
        <input type="text" id="newBurger" name="burger_name"><br><br>
      </div>
      <button type="submit" id="add-burger">Add Burger</button>
    </form>
</div>

 <div class="clear-all">
      <button id="clear">Clear all Burgers</button>
    </div>
  </div>